.products-display {
    overflow: hidden;
    width: 100%;
    background: #f0eeed;
    padding: 20px 0 0 0;
    -webkit-transition: all .5s ease;
    -moz-transition: all .5s ease;
    -ms-transition: all .5s ease;
    -o-transition: all .5s ease;
    transition: all .5s ease;
}

.icon-top-title i {
    display: inline-block;
    color: #e84a52;
    font-size: 64px;
}

.img-item {
    position: relative;
    overflow: hidden;
    margin-bottom: -6px;
}

.img-item:hover .zoomex, .prettyPhoto:hover .zoomex, .img-item:hover .zoomex2, .img-item:hover .zoomex2 * {
    opacity: 1;
    filter: alpha(opacity=100);
}

.product-item {
    -webkit-box-shadow: 0px 3px 5px #bababa;
    box-shadow: 0px 3px 5px #bababa;
    background-color: #f6f6f6;
    padding: 0;
    display: inline-block;
    width: 230px;
    margin: 0px 15px 20px 0px;
    text-align: left;
    vertical-align: top;
    .image-cropper {
        position: relative;
        width: 100%;
        height: 230px;
        overflow: hidden;
    }

    .product-description {
        height: 70px;
        padding: 16px;
        text-align: center;
    }
}

.product-item-dets {
    width: 290px;
    float: right;
    border-bottom: 2px solid #e5e5e5;
    margin-right: 10px;
    margin-top: 20px;
}

.product-item-dets i {
    font-size: 32px;
    color: #ddd;
}

.product-item-dets i.liked, .product-item-dets i:hover {
    color: #e53f51;
    cursor: pointer;
}

.product-item-like-box {
    width: 36px;
    text-align: center;
    float: left;
    padding-bottom: 10px;
    color: #c3c3c3;
    padding-left: 20px;
    margin-right: 20px;
}

.product-item-detail-box {
    width: 193px;
    float: left;
    padding: 7px 0 10px 20px;
    color: #c3c3c3;
    border-left: 1px solid #e5e5e5;
    line-height: 1;
}

.product-item-detail-box a {
    color: #bbb;
}

.product-item-detail-box a:hover {
    text-decoration: underline;
}

.product-item-detail-box hr {
    margin: 10px 0;
}

.product-item i.icomoon-heart-7 {
    color: #ef7c88;
    margin-top: 3px;
}

.centered {
    position: absolute;
    left: -20%;
    top: -70%;
}

.product-list {
    display: block;
    background: #fff;
    height: 478px;
    overflow: auto;
    text-align: center;
}

.product-list h4, .recent-works-items h4, .shop-item h4, .side-list h5 {
    font-weight: 400;
    margin: 10px 0 7px;
    font-size: 18px;
}

.product-list h4 a, .recent-works-items h4 a, .shop-item h4 a, .side-list h5 a {
    color: #494949;
}

.product-list h4 a:hover, .recent-works-items h4 a:hover, .shop-item h4 a:hover, .side-list h5 a:hover {
    text-decoration: underline;
}

.product-list p, .recent-works-items p {
    color: #909090;
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 4px solid #ededed;
    text-transform: uppercase;
}

.product-item h5 {
    margin-top: 8px;
}

nav.primary {
    padding: 10px;
}

nav.primary .portfolioFilters a {
    cursor: pointer;
    border-radius: 20px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.2;
    color: #333;
    font-weight: normal;
    margin-top: 0 !important;
    text-align: center;
    width: auto;
    border: 2px solid #f0eeed;
}

nav.primary .portfolioFilters a:hover {
    border-color: #e84a52;
}

nav.primary .portfolioFilters a.selected, nav.primary ul li a:active {
    border: 2px solid #e84a52;
    color: #e84a52;
    margin-top: 0 !important;
}

nav.primary .portfolioFilters .portf {
    color: #61A300;
    font-weight: bold;
    margin-right: 10px;
    padding-top: 5px;
}

nav.primary .portfolioFilters {
    clear: both;
    list-style: none outside none;
}

nav.primary .portfolioFilters {
    margin-right: 10px;
}

.zoomex, .zoomex2 {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .35) url(<%= asset_path 'fancy-big-ico.png' %>) no-repeat center;
    background-color: url(<%= asset_path 'fancy-big-ico.png' %>) \9;
    opacity: 0;
    -webkit-transition: all .3s ease-in-out;
    -moz-transition: all .3s ease-in-out;
    -ms-transition: all .3s ease-in-out;
    -o-transition: all .3s ease-in-out;
    transition: all .3s ease-in-out;
    color: transparent;
    display: block;
    left: 0;
    filter: alpha(opacity=0);
    position: absolute;
    top: 0;
    bottom: 5px;
}

.zoomex2 {
    background: rgba(0, 0, 0, .72);
    background: #000\9;
}

.zoomex2 * {
    filter: alpha(opacity=0) \9;
}

.zoomex2 i {
    color: inherit;
    font-size: 16px;
    padding: 10px;
    border: 2px solid #fff;
    border-radius: 50%;
}

.zoomex2 a.zoomlink1, .zoomex2 a.zoomlink2 {
    position: absolute;
    bottom: 14%;
    left: 50%;
    color: #fff;
    margin-left: -45px;
}

.zoomex2 a.zoomlink2 {
    margin-left: 12px;
}

.zoomex2 a:hover i {
    color: #e84a52;
    border-color: #e84a52;
}

.zoomex2 h6 {
    font-weight: bold;
    color: #fff;
    font-size: 22px;
    text-align: center;
    position: absolute;
    bottom: 44%;
    left: auto;
    width: 100%;
    margin: 5px;
}

.zoomex2 h6 small {
    font-size: 14px;
    color: #e9e9e9;
    font-weight: 400;
    display: block;
    margin-top: 16px;
}

/* ISOTOPE */

.isotope-item {
    z-index: 2;
}

.isotope-hidden.isotope-item {
    pointer-events: none;
    z-index: 1;
}

.isotope, .isotope .isotope-item {
    -webkit-transition-duration: 0.8s;
    -moz-transition-duration: 0.8s;
    transition-duration: 0.8s;
}

.isotope {
    -webkit-transition-property: height, width;
    -moz-transition-property: height, width;
    transition-property: height, width;
}

.isotope .isotope-item {
    -webkit-transition-property: -webkit-transform, opacity;
    -moz-transition-property: -moz-transform, opacity;
    transition-property: transform, opacity;
}
	
