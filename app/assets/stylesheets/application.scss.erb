#footer { width: 100%; padding: 10px 0 0 0; background: #2d2d2d; border-top: 8px solid #222; }
#scroll-top a { width: 16px; height: 16px; padding: 6px 8px 9px; border-radius: 4px; background: #818c90; position: fixed; bottom: 48px; right: 32px; display: none; opacity: 0.89; filter: alpha(opacity=89); z-index: 499841; }
#scroll-top a i { font-size: 16px; color: #fff; }
#scroll-top a:hover { background-color: #ffcc00; cursor: pointer; }


.product-buy{
    margin: 10px;
    a{
        margin-left: 10px;
        font-size: 27px;
    }
}

.product-image{
    width: 392px;
}

.order-navigation{
    background-color: #fff;
    padding: 10px 0px 10px 0px;
    .portfolioFilters{
        text-align: right;
    }
}

.filter-navigation{
    padding: 10px 5px 0px 5px;
}

.quiz-answers{
   padding-left: 150px;
}

.quiz-steps{
    height: 55px;
    border-bottom: 1px solid #b7b7b7;
}

/*map, div[map] {display:block; width: 600px; height: 400px}*/

.find-location {
    height: 14px;
    width: 400px;
    display: block;
    position: absolute;
    top: 98px;
    left: 100px;
    z-index: 99;
}

.filter-type{
    height: 14px;
    width: 400px;
    display: block;
    position: absolute;
    top: 98px;
    left: 576px;
    z-index: 99;
}

.user-info{
    height: 650px;
    width: 100%;
    display: block;
    position: absolute;
    background: #fff;
    z-index: 99;
    padding-left: 2%;
    padding-top: 1%;
    /*border-left: 2px solid grey;*/
    /*border-top: 1px solid grey;*/
}

.marker-labels{
    color: #000;
    background-color: #fff;
    font-family: Roboto, 'Trebuchet MS', Helvetica, Arial, sans-serif;
    font-size: 12px;
    text-align: center;
    width: 90px;
    border: 1px solid black;
    white-space: nowrap;
}

.summary{
    width: 100%;
    text-align: center;
    position: relative;
    padding: 4em 0 6em 0;
    color: #fff;
    box-shadow: 0 1px 2px rgba(0,0,0,.25);
    text-shadow: 0 0 1px rgba(0,0,0,.05),0 1px 2px rgba(0,0,0,.3);
    background: #AA7742;
    display: block;
    height: 500px;
    h2{
        color: #fff;
        font-size: 2.7em;
        margin: .9em 0 .9em 0;
        font-family: Lato, 'Helvetica Neue', Helvetica, sans-serif;
        font-weight: 900;
        line-height: 1.2;
        text-shadow: 0 0 1px rgba(0,0,0,.05),0 1px 2px rgba(0,0,0,.3);
        font-size: 56px;
    }
    p{
        color: #fff;
        font-family: "Lato","Helvetica Neue",Helvetica,sans-serif;
        font-weight: 500;
        font-size: 21px;
        line-height: 1.8;
        margin: 0 0 2.7em 0;
        text-shadow: rgba(0, 0, 0, 0.0470588) 0px 0px 1px, rgba(0, 0, 0, 0.298039) 0px 1px 2px;
    }
    z-index: 3;
    box-shadow: inset 0 0 0 1000px rgba(0,0,0,.2); // Doesnt work in 2% browser lower than ie9
}

#first-box{
    background: url(<%= asset_path 'beach4.jpg' %>) no-repeat center;
}
#second-box{
    background: url(<%= asset_path 'beach3.jpg' %>) no-repeat center;
}

.gravatar{
    border-radius: 45px;
    -webkit-border-radius: 45px;
}

.page-header {
    padding-bottom: 9px;
    padding: 5px 0 20px;
    margin: 0px;
    border-bottom: 1px solid #eeeeee;
    button, input{
        margin: 20px 0px;
    }
}

.brand-title{
    margin: 13px 20px;
    h1{
        color: #da552f;
        font-size: 20px;
        margin-top: -1px;
        margin: 0px;
        padding: 0px;
        line-height: 22px;
    }

    h2{
        color: #999999;
        font-size: 18px;
        font-weight: 500;
        margin: 0px;
        padding: 0px;
        line-height: 22px;
        font-style: italic;
    }
}

#navbar-main{
    margin-bottom: 0px;
    border-radius: 0px;

    .navbar-nav li a{
        font-size: 17px;
    }
}

body, html {
    height: 100%;
    width: 100%;
}

