<div class="container">
  <h2>Add your location</h2>
  <div class="row">
    <div class="col-md-8">
      <google-map center="map.center" draggable="true" options=map.options zoom="map.zoom">
        <markers models="markers" coords="'self'" click="'onClicked'">
        </markers>
      </google-map>
    </div>

    <div class="col-md-4">

      <div class="panel panel-default">
        <div class="panel-body text-center">      <a ng-click="saveData()" class="button button-icon icon ion-navigate">Save My Data</a>
        </div>

        <div class="panel-heading">Personal</div>
        <div class="panel-body">
            <div class="form-group">
              <label for="exampleInputEmail1">Name</label>
              <input type="text" ng-model="user.full_name" class="form-control" placeholder="eg. John Smith">
            </div>
          <button type="button" class="btn btn-default"  ng-click="saveCoordinates()" >Locate Me</button>
          <div class="form-group">
            <label for="exampleInputEmail1">Location: latitude</label>
            <input type="text" ng-model="user.latitude" disabled class="form-control" placeholder="eg. 45.81">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Location: longitude</label>
            <input type="text" ng-model="user.longitude" disabled class="form-control" placeholder="eg. 15.99">
          </div>
        </div>
        <div class="panel-heading">Work</div>
        <div class="panel-body">
          {{work}}
          <input type="text" ng-model="user.work" class="form-control" placeholder="What work do you do online?">
        </div>
        <div class="panel-heading">Hobbies</div>
        <div class="panel-body">
          <input type="text" ng-model="user.hobbies" class="form-control" placeholder="Do you have any hobbies or want to learn anything new on your next trips?">
        </div>
        <div class="panel-heading">Life and travel plans</div>
        <div class="panel-body">
          <input type="text" ng-model="user.plans" class="form-control" placeholder="What are your travel plans for this year?">

      </div>

    </div>
    </div>
</div>